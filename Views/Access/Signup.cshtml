@model HubDeEntretenimientoMegaLiderlyBackend.Models.User;
@{
    Layout = null; 
}

<html>
    <head>
        <title>Signup</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        
    </head>
    <body>
        <div class="row mt-5 justify-content-center">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">
                         Register
                    </div>
                    <div class="card-body">

                    <form asp-controller="Access" asp_action="Signup" method="post">
                            <input class="form-control-mb3" type="text" placeholder="Name" required asp-for="Name">
                            <input class="form-control-mb3" type="text" placeholder="Last Name" required asp-for="LastName">
                            <input class="form-control-mb3" type="text" placeholder="Email" required asp-for="Email">
                            <input class="form-control-mb3" type="text" placeholder="Password" required asp-for="Password">
                            <input class="form-control-mb3" type="text" placeholder="Age" required asp-for="Age">

                            <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Signup</button>
                            </div>

                        @if (ViewData["Message"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Message"]
                            </div>
                        }
                        ¿Ya tienes cuenta? <a asp-controller="Access" asp-action="Login">Login</a>
                        </form>

                    </div>

                </div>
            </div>
        </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
</html>